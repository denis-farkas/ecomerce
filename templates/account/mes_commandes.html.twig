{% extends 'base.html.twig' %}




{% block body %}

<div class="container">


    <h1 class="text-center mt-5 mb-5">Mon compte</h1>

    <div class = "col-md-3 mt-5">

        {% include 'account/_menu.html.twig' %}

    </div>
    <div class = "form-container justify-content-start col-md-9">

        <div class=" text-center  form-wrapper mb-5">

            <h5 class = "mb-5 text-center">Mes dernières commandes</h5>

            {% if orders|length == 0 %}

                <div class="alert alert-info">

                    Vous n'avez passé aucune commande pour le moment.

                </div>

            {% else %}

            <table class="table">

                <thead>

                <tr>

                    <th scope="col">N°</th>

                    <th scope="col">Date</th>

                    <th scope="col">Statut</th>

                    <th scope="col">Total T.T.C</th>

                    <th scope="col"></th>

                </tr>

                </thead>

                <tbody>

                {% for order in orders %}

                    <tr>

                        <td>{{ order.id }}</td>

                        <td>{{ order.createdAt|date('d/m/Y') }}</td>

                        <td>{{ include('admin/state.html.twig', { field : { 'value' : order.state } } ) }}</td>

                        <td>{{ order.totalPrice}} &#8364;</td>

                        <td><a href="{{ path('app_account_order', { 'id_order' : order.id } ) }}">Voir</a></td>

                    </tr>

                {% endfor %}

                </tbody>

            </table>

            {% endif %}

        </div>

    </div>

</div>


{% endblock %}